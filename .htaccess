Options +FollowSymLinks

ErrorDocument 404 /404.html

# Set the default handler.
DirectoryIndex index.html index.htm


RewriteEngine On
RewriteCond %{SERVER_PORT} 80
RewriteRule ^/(fr|en)/store(.*)$ https://holusion.com/$1/store$2 [R,L]

# rewrite dev.holusion.com to holusion.com/dev
RewriteCond %{HTTP_HOST} ^dev.holusion.com$ [OR]
RewriteCond %{HTTP_HOST} ^www.dev.holusion.com$
RewriteRule (.*)$ https://holusion.com/dev/$1 [R=301,L]


#permanent redirect for home page to french version
RedirectMatch 301 ^/$ /fr/

# redirects for really old pages that will not go away
Redirect 301 ^/fr/nos-solutions-produits /fr/products/
Redirect 301 ^/(fr|en)/histoire.* /$1/posts/
Redirect 301 /fr/uses /fr/

# Redirects for moved pages that should not happen too often

Redirect 301 	/fr/posts/2016-12-08_kiabi_popupstore /fr/posts/2016-12-08-kiabi_popupstore
Redirect 301 /fr/posts/2017-06-23-Salon_du_bourget_Thal%C3%A8s /fr/posts/2017-06-23-Salon_du_bourget_Thales
Redirect 301 /fr/posts/2018-06-04_Viva_Technology_2018 /fr/posts/2018-06-04-Viva_Technology_2018
Redirect 301 /en/posts/2018-06-04_Viva_Technology_2018 /en/posts/2018-06-04-Viva_Technology_2018


<IfModule mod_expires.c>
	ExpiresActive On
	ExpiresDefault "access plus 1 day"
	ExpiresByType image/jpg 			"access plus 1 week"
	ExpiresByType image/jpeg 			"access plus 1 week"
	ExpiresByType image/png 			"access plus 1 week"
	ExpiresByType image/gif 			"access plus 1 week"
	ExpiresByType image/svg+xml			"access plus 1 week"
	AddType image/x-icon .ico
	ExpiresByType image/ico 			"access plus 1 week"
	ExpiresByType image/icon 			"access plus 1 week"
	ExpiresByType image/x-icon 			"access plus 1 week"
	ExpiresByType text/css 				"access plus 1 week"
	ExpiresByType text/javascript 		"access plus 1 week"
	ExpiresByType application/javascript 		"access plus 1 week"
	ExpiresByType text/html 		"access plus 1 day"
  ExpiresByType application/x-font-woff 		"access plus 1 year"
</IfModule>
