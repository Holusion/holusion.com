{
  "hosting": {
    "public": "_site",
    "ignore": [
      "firebase.json",
      "**/.*"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/",
        "function": "api_calls"
      },
      {
        "source": "/api/v1/**",
        "function": "api_calls"
      }
    ],
    "redirects": [
      {"regex": "^/dev/(?P<lang>fr|en)/(toolbox|content|search)/.+", "destination": "/:lang/dev/", "type": 301},
      {"regex": "^/(?P<lang>fr|en)/products/(?P<name>[^/]+)$", "destination": "/:lang/store/:name", "type": 301}
    ],
    "headers": [ 
      {
        "source": "/static/fonts/*.@(ttf|woff|woff2)",
        "headers": [ 
          { "key": "Cache-Control", "value": "max-age=31536000" },
          { "key": "Access-Control-Allow-Origin", "value": "*" }
        ]
      }, {
        "source": "/assets/**/*.@(jpg|png|webp)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }]
      },{
        "source": "/static/img/icons/**/*.@(jpg|png|webp)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31536000"
        }]
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
